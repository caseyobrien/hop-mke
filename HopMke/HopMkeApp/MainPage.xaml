<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:HopMkeApp" x:Class="HopMkeApp.MainPage">
    <StackLayout>
        <!-- Place new controls here -->
        <Label
            x:Name="_label"
            Text="Welcome to Xamarin.Forms!" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <Button
            x:Name="_nearestNBStop"
            Text="Nearest NB Stop"
            Clicked="OnButtonClicked" />
        <Button
            x:Name="_nearestSBStop"
            Text="Nearest SB Stop"
            Clicked="OnButtonClicked" />
        <Button
            x:Name="_next"
            Text="Next"
            Clicked="OnButtonClicked" />
    </StackLayout>
</ContentPage>